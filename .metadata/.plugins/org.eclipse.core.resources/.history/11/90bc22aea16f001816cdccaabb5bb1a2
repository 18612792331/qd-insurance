	<!-- 根据单证ID与状态查询理赔信息 -->
	<select id="selectCompensateRecordListByPolicyIDandStatus"
		resultMap="voResultMap">
		SELECT

		c.ID, c.policy_id, c.picc_no, c.guarantee_item_id, c.room_id,
		c.room_address,
		c.happen_at, c.report_at,
		c.contact_name,
		c.contact_phone,
		c.estimate_money, c.accident_memo, c.accident_imgs,
		c.report_no,
		c.paid_money,
		c.status, c.data_status, c.paid_type,
		c.create_at, c.create_by, c.finish_at,
		c.finish_by, c.order_no,
		c.object_id, c.object_name,
		g.compensate_type,
		p.insurant_name
		FROM
		compensate_record c
		inner JOIN policy_guarantee_item g
		ON c.policy_id =
		g.policy_id
		inner join insurance_policy p
		on c.policy_id = p.id
		WHERE c.policy_id =
		#{policyID,jdbcType=VARCHAR}
		<if test="status != null and status != 0 ">
			AND c.status = #{status,jdbcType=INTEGER}
		</if>
		order by c.create_at
	</select>


</mapper>